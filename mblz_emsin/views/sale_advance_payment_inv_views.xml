<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record model="ir.ui.view" id="view_sale_advance_payment_inv">
        <field name="name">Invoice Orders</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='advance_payment_method']" position="before">
                <group>
                    <field name="invoice_method" widget="radio" />
                    <field name="one_line_concept" attrs="{'invisible':[('invoice_method', 'not in', ['one_line'])]}" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>